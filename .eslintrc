{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "env": {
    "jest": true,
    "jasmine": true
  },
  "rules": {
    "semi": [2, "never"],
    "max-len": [2, 120],
    "prefer-arrow-callback": 0,
    "arrow-parens": [2, "always"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-mixed-operators": [
      "error",
      {
        "groups": [
          ["&", "|", "^", "~", "<<", ">>", ">>>"],
          ["&&", "||"]
        ]
      }
    ]
  }
}
